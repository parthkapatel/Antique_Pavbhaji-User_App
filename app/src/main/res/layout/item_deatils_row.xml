<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtlblItemName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bell_mt_bold"
                android:padding="5dp"
                android:textColor="#9C27B0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtlblItemIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bell_mt"
                    android:text="@string/Rs"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textColor="@color/blackColor"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/txtlblItemAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bell_mt"
                    android:textColor="@color/blackColor"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/txtlblItemDesc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bell_mt_bold"
                android:padding="5dp"
                android:textColor="@color/lightGrayColor"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <Button
                android:id="@+id/btnPdtRemoveCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#9C9A9A"
                android:fontFamily="@font/bell_mt"
                android:text="Remove From Cart"
                android:textColor="#FFFFFF"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnPdtAddCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ff9f00"
                android:fontFamily="@font/bell_mt"
                android:text="Add To Cart"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>